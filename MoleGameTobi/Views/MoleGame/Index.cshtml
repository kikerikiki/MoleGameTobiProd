                            Musik
                            <div class="switch d-inline-block">
                                <!-- Zusätzliche Klasse d-inline-block -->
                                <input type="checkbox" id="musicToggle">
                                <label for="musicToggle" class="slider"></label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Credits-Modal -->
            <div class="cc-container">
                <button id="ccButton">CC</button>
                <div class="popover" id="creditsPopover" style="display: none;">
